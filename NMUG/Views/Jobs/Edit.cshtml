@model NMUG.Models.Jobs

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Jobs</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="JobId" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="ActiveIn" />
                    <label asp-for="ActiveIn"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="JobName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="JobName" class="form-control" />
                <span asp-validation-for="JobName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="JobPostDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="JobPostDate" class="form-control" />
                <span asp-validation-for="JobPostDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShortDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea cols="200" rows="10" asp-for="ShortDescription" class="form-control" />
                <span asp-validation-for="ShortDescription" class="text-danger" />
            </div>
        </div>
    
        @*<input type="file" name="files" multiple /> *@
        @*<input type="submit" value="Upload" />*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>


    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
