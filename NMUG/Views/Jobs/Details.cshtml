@model IEnumerable<NMUG.Models.Jobs>

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Jobs</h4>
    <hr />
    @if (Model.Count() == 0)
    {
        <p>There are no active postings right now.  Try back later. </p>
    }

    else
    {

        @foreach (var item in Model)
        {
            <dl class="dl-horizontal">

                @*<dt>
                        @Html.DisplayNameFor(model => item.ActiveIn)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => item.ActiveIn)
                    </dd>*@
                <dt>
                    @Html.DisplayNameFor(model => item.JobPostDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => item.JobPostDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => item.JobName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => item.JobName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => item.ShortDescription)
                </dt>
                <dd>
                    @Html.DisplayFor(model => item.ShortDescription)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => item.FileName)
                </dt>
                <dd>
                    <a href = "@Url.Content("~/uploads/"+ item.FileName)" >@Html.DisplayFor(model => item.FileName)</a>
                </dd>

            </dl>
        }
    }
</div>
