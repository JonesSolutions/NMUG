@model IEnumerable<NMUG.Models.Meeting>

@{
	ViewData["Title"] = "Index";
}

<h2>Meeting List</h2>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>

			<th>
				Date
			</th>
			<th>
				Time
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MeetingDescription)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MeetingPresenter)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MeetingLocation)
			</th>

			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.MeetingDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FromTo)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MeetingDescription)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MeetingPresenter)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MeetingLocation)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
