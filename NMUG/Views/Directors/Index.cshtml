@model List<NMUG.Models.Directors>
@*@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService*@
@using (Html.BeginForm("Directors", "File", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))

{
    ViewData["Title"] = "Index";
}

<h2>Directors</h2>
@* Authorization for later, so the create button is hidden without admin perms *@
@*@if (await AuthorizationService.AuthorizeAsync(User, "Administrators"))
{*@
    <p><a asp-action="Create">Create New </a></p>
    
  
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].title.jobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Email)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model[0].RoleDescription)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model[0].Biography)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model[0].Image)
            </th>*@
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title.jobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.RoleDescription)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Biography)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

